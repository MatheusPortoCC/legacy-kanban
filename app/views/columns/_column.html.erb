<div class="block text-sm font-semibold rounded-md border-none mr-1">
  <div class="flex flex-col flex-shrink-0 w-72 border border-blue-500 rounded-lg p-2">
    <%= column.name %>
    <div id="column_<%= column.id %>" class="h-4/5 min-h-full column" data-column-id="<%= column.id %>" data-controller="tasks" data-action="dragenter->tasks#dragEnter dragover->tasks#dragOver dragleave->tasks#dragLeave drop->tasks#drop">
      <%= render column.tasks %>

      <%= render 'tasks/form', task: Task.new(column_id: column.id) %>
    </div>
  </div>
</div>