<%= form_with(model: column, url: board_columns_path(@board)) do |form| %>
  <div class="block text-sm font-semibold rounded-md border-none mr-1">
    <div class="flex flex-col flex-shrink-0 w-72 border border-blue-500 rounded-lg p-2">
      <%= form.text_field :name, class: "rounded-lg cursor-pointer border border-blue-400 w-full mt-3 text-sm font-medium", placeholder: "New column name" %>

      <div class="flex items-center w-full mt-3 text-xs font-medium text-gray-400">
        <div class="flex items-center">
          <%= form.submit "Save", class: "rounded-lg text-xs px-4 py-2 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
        </div>
      </div>
    </div>
  </div>  
<% end %>