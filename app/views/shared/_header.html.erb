<div class="relative bg-blue-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center py-6 md:space-x-10">
      <div class="flex">
        <span class="text-white text-2xl">Legacy Kanban</span>
      </div>

      <%= button_to boards_path(), method: :get, class: "bg-blue-400 hover:bg-blue-500 text-white py-2 px-4 rounded inline-flex items-center" do %>
        <i class="fas fa-chalkboard-teacher w-4 h-4 mr-4"></i>
        <span>My boards</span>
      <% end %>

      <div class="flex justify-center md:space-x-3">
        <%= link_to edit_user_registration_path() do %>
          <i class="fas fa-cog text-white text-2xl hover:text-blue-400"></i>
        <% end %>

        <%= button_to destroy_user_session_path(), method: :delete do %>
          <i class="fas fa-sign-out-alt text-white text-2xl hover:text-blue-400"></i>
        <% end %>
      </div>
   </div>
  </div>
</div>