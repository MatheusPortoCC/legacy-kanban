<div id="<%= dom_id board %>">
  <% if action_name != "show" %>
    <div class="flex justify-center">
      <div class="block rounded-lg shadow-lg bg-white max-w-sm text-center">
        <div class="p-6">
          <h5 class="text-gray-900 text-xl font-medium mb-2"><%= board.name %></h5>
          <p class="text-gray-700 text-base mb-4">
            <%= board.description %>
          </p>
          <%= link_to "Show", board, method: :get, class: "px-6 py-2.5 bg-blue-500 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-600 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out" %>
          <%= link_to "Edit", edit_board_path(board), method: :get, class: "px-6 py-2.5 bg-blue-500 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-600 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out" %>
        </div>
        <div class="py-3 px-6 border-t border-gray-300 text-gray-600">
          <%= board.updated_at.in_time_zone.strftime('%F - %T') %>
        </div>
      </div>
    </div>
    <hr class="mt-6">
  <% end %>
</div>
