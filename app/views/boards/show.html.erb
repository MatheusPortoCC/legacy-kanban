<%= form_with(model: @board, class: "flex flex-grow px-10 mt-4 space-x-6 overflow-auto") do |f| %>
  <% f.fields_for :columns do |column_form| %>
    <div class="flex flex-col flex-shrink-0 w-72">
      <div class="flex items-center flex-shrink-0 h-10 px-2">
        <%= column_form.text_field :name, class: "block text-sm font-semibold rounded-md border-none", placeholder: "New column name" %>

        <span class="flex items-center justify-center w-5 h-5 ml-2 text-sm font-semibold text-blue-500 bg-white rounded bg-opacity-30"><%= column_form.object.tasks.count %></span>
      </div>

      <div class="flex flex-col pb-2 overflow-auto">
        <% unless column_form.object.new_record? %>
          <% column_form.object.tasks.each do |task| %>
            <div class="relative flex flex-col items-start p-4 mt-3 bg-white rounded-lg cursor-pointer border border-blue-400 group" draggable="true">
              <h4 class="mt-3 text-sm font-medium"><%= task.name %></h4>
              <div class="flex items-center w-full mt-3 text-xs font-medium text-gray-400">
                <div class="flex items-center">
                  <i class="fas fa-calendar"></i>
                  <span class="ml-1 leading-none"><%= task.updated_at %></span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

        <div class="relative flex flex-col items-start p-4 mt-3 bg-white rounded-lg cursor-pointer border border-blue-400 group" draggable="true">
          <input class="block text-sm font-semibold rounded-md border-none" placeholder="New task name" type="text">
          <div class="flex items-center w-full mt-3 text-xs font-medium text-gray-400">
            <div class="flex items-center">
              <button type="button" class="inline-block px-3 py-1 border-2 border-blue-400 text-blue-400 font-medium text-xs leading-tight uppercase rounded hover:bg-black hover:bg-opacity-10 focus:outline-none focus:ring-0 transition duration-150 ease-in-out">Save</button>
            </div>
          </div>
        </div>
      </div>      
    </div>
  <% end %>
<% end %>