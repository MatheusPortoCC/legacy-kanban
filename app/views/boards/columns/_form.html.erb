<%= form_with(model: [@board, column]) do |form| %>
  <div class="flex flex-col flex-shrink-0 w-72 border border-blue-500 rounded-lg p-2">
    <div class="flex items-center flex-shrink-0 h-10">
      <%= form.hidden_field :board_id %>
      <%= form.text_field :name, class: "block text-sm font-semibold rounded-md border-none mr-1", placeholder: "New column name" %>
      <% if form.object.new_record? %>
          <%= form.button "Save", class: "inline-block px-1 py-1 border-2 border-blue-400 text-blue-400 font-medium text-xs leading-tight uppercase rounded hover:bg-black hover:bg-opacity-10 focus:outline-none focus:ring-0 transition duration-150 ease-in-out" %>
      <% else %>  
          <span class="flex items-center justify-center w-5 h-5 ml-2 text-sm font-semibold text-blue-500 bg-white rounded bg-opacity-30"><%= form.object.tasks.count %></span>
      <% end %>  
    </div>

    <div class="flex flex-col pb-2 overflow-auto" data-controller="tasks" data-action="dragenter->tasks#dragEnter dragover->tasks#dragOver dragleave->tasks#dragLeave drop->tasks#drop">
      <% unless form.object.new_record? %>
        <% form.object.tasks.each do |task| %>
          <div class="relative flex flex-col items-start p-4 mt-3 bg-white rounded-lg cursor-pointer border border-blue-400 group" data-task-id="<%= task.id %>" draggable="true" data-action="dragstart->tasks#dragStart drag->tasks#drag dragend->tasks#dragEnd">
            <h4 class="mt-3 text-sm font-medium"><%= task.name %></h4>
            <div class="flex items-center w-full mt-3 text-xs font-medium text-gray-400">
            <div class="flex items-center">
              <i class="fas fa-calendar"></i>
              <span class="ml-1 leading-none"><%= task.updated_at %></span>
            </div>
            </div>
          </div>
        <% end %>

        <%= form.fields_for :tasks, form.object.tasks.build do |task_form| %>
          <div class="relative flex flex-col items-start p-4 mt-3 bg-white rounded-lg cursor-pointer border border-blue-400 group">
            <%= task_form.text_field :name, class: "block text-sm font-semibold rounded-md border-none", placeholder: "New task name", value: nil %>
            <div class="flex items-center w-full mt-3 text-xs font-medium text-gray-400">
              <div class="flex items-center">
                <%= task_form.button "Save", class: "inline-block px-3 py-1 border-2 border-blue-400 text-blue-400 font-medium text-xs leading-tight uppercase rounded hover:bg-black hover:bg-opacity-10 focus:outline-none focus:ring-0 transition duration-150 ease-in-out" %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>